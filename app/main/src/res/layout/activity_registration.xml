<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity"
    android:background="@drawable/register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration:"
                android:textColor="#DC143C"
                android:layout_marginTop="80dp"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvmandatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Fields are mandatory"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*Name"
                android:textSize="20dp"
                android:textColor="#00FF00"
                android:layout_marginLeft="40dp"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="*EmailId"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#00FF00"
                android:layout_marginLeft="40dp"/>

            <EditText
                android:id="@+id/edtMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Enter Email id"
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20dp"
                android:textColor="#00FF00"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"/>

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Enter address"
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="*MobileNo"
                android:textColor="#00FF00"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtPhNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Enter Mobile No"
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tvPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*password"
                android:textColor="#00FF00"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"/>

            <EditText
                android:id="@+id/edtPasswdreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textSize="25dp"
                android:layout_marginLeft="40dp"/>

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="SIGN UP"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>